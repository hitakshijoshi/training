<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <!-- Add menu to the end of the sidebar -->
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-my-link">
                <arguments>
                    <argument name="path" xsi:type="string">customernavigation/mylink/index</argument>
                    <argument name="label" xsi:type="string">My Link</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>